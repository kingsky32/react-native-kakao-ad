{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "lib": ["ESNext"],
    "module": "CommonJS",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./lib",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
